    e.preventDefault();
    return false;
});

// 붙여넣기 이벤트 차단
document.addEventListener('paste', function(e) {
    e.preventDefault();
    return false;
});

// 인쇄 방지
window.addEventListener('beforeprint', function(e) {
    e.preventDefault();
    return false;
});

// 페이지 이탈 방지 (뒤로가기 등)
window.addEventListener('beforeunload', function(e) {
    e.preventDefault();
    e.returnValue = '';
    return '';
});

// 콘솔 메시지 가리기
console.clear();
console.log = function() {};
console.warn = function() {};
console.error = function() {};

// 기존 스크립트 부분
const output = document.getElementById('output');

// CMD 시작 메시지들은 즉시 표시
const initialText = `Microsoft Windows [Version 10.0.26100.4946]
(c) Microsoft Corporation. All rights reserved.

C:\\>`;

// 타이핑될 명령어
const command = 'ping time.to.love';

// ping 결과를 줄별로 분리
const pingLines = [
    '\n\nPing time.to.love 32바이트 데이터 사용:',
    '\ntime.to.love의 응답: 바이트=32 시간=46ms TTL=114',
    '\ntime.to.love의 응답: 바이트=32 시간=45ms TTL=114',
    '\ntime.to.love의 응답: 바이트=32 시간=46ms TTL=114',
    '\ntime.to.love의 응답: 바이트=32 시간=47ms TTL=114\n\ntime.to.love에 대한 Ping 통계:\n    패킷: 보냄 = 4, 받음 = 4, 손실 = 0 (0% 손실),\n왕복 시간(밀리초):\n    최소 = 45ms, 최대 = 47ms, 평균 = 46ms\n\nC:\\>'
];

let currentChar = 0;

function typeCommand() {
    if (currentChar < command.length) {
        output.textContent += command[currentChar];
        currentChar++;
        setTimeout(typeCommand, Math.random() * 100 + 50);
    } else {
        // 타이핑 완료 후 깜빡이는 커서 추가
        const cursor = document.createElement('span');
        cursor.className = 'cursor';
        cursor.textContent = '_';
        output.appendChild(cursor);
        
        // 5번 깜빡인 후 ping 결과 표시 (5초)
        setTimeout(showPingResult, 5000);
    }
}

function showPingResult() {
    // 커서 제거
    const cursor = output.querySelector('.cursor');
    if (cursor) {
        cursor.remove();
    }
    
    let currentLine = 0;
    
    function showNextLine() {
        if (currentLine < pingLines.length) {
            output.textContent += pingLines[currentLine];
            currentLine++;
            
            // 첫 번째 줄(헤더)은 즉시, 나머지는 1초씩 간격
            if (currentLine === 1) {
                setTimeout(showNextLine, 100); // 헤더 후 바로
            } else if (currentLine < pingLines.length) {
                setTimeout(showNextLine, 1000); // 1초 간격
            }
        }
        
        // 마지막 줄까지 완료되면 커서 추가
        if (currentLine === pingLines.length) {
            const finalCursor = document.createElement('span');
            finalCursor.className = 'cursor';
            finalCursor.textContent = '_';
            output.appendChild(finalCursor);
        }
    }
    
    showNextLine();
}

// 페이지 로드 시 즉시 초기 텍스트 표시
output.textContent = initialText;

// 1초 후 명령어 타이핑 시작
setTimeout(typeCommand, 1000);
</script>
</body>
</html>
