<div class="text" id="output"></div>

<script>
// 개발자 도구 감지 및 차단
(function() {
    let devtools = {
        open: false,
        orientation: null
    };
    
    const threshold = 160;
    
    setInterval(function() {
        if (window.outerHeight - window.innerHeight > threshold || 
            window.outerWidth - window.innerWidth > threshold) {
            if (!devtools.open) {
                devtools.open = true;
                // 개발자 도구가 열리면 페이지를 다른 곳으로 리디렉트하거나 경고
                alert('개발자 도구 사용이 감지되었습니다.');
                window.location.href = 'about:blank';
            }
        } else {
            devtools.open = false;
        }
    }, 500);
})();

// 키보드 단축키 차단
document.addEventListener('keydown', function(e) {
    // F12 (개발자 도구)
    if (e.keyCode === 123) {
        e.preventDefault();
        return false;
    }
    
    // Ctrl 조합키들
    if (e.ctrlKey) {
        // Ctrl+Shift+I (개발자 도구)
        if (e.shiftKey && e.keyCode === 73) {
            e.preventDefault();
            return false;
        }
        // Ctrl+Shift+J (콘솔)
        if (e.shiftKey && e.keyCode === 74) {
            e.preventDefault();
            return false;
        }
        // Ctrl+Shift+K (파이어폭스 콘솔)
        if (e.shiftKey && e.keyCode === 75) {
            e.preventDefault();
            return false;
        }
        // Ctrl+U (소스 보기)
        if (e.keyCode === 85) {
            e.preventDefault();
            return false;
        }
        // Ctrl+S (저장)
        if (e.keyCode === 83) {
            e.preventDefault();
            return false;
        }
        // Ctrl+A (전체 선택)
        if (e.keyCode === 65) {
            e.preventDefault();
            return false;
        }
        // Ctrl+C (복사)
        if (e.keyCode === 67) {
            e.preventDefault();
            return false;
        }
        // Ctrl+V (붙여넣기)
        if (e.keyCode === 86) {
            e.preventDefault();
            return false;
        }
        // Ctrl+X (잘라내기)
        if (e.keyCode === 88) {
            e.preventDefault();
            return false;
        }
        // Ctrl+P (인쇄)
        if (e.keyCode === 80) {
            e.preventDefault();
            return false;
        }
    }
    
    // Alt 조합키들
    if (e.altKey) {
        // Alt+Tab (작업 전환) - 완전히 막을 수는 없지만 시도
        if (e.keyCode === 9) {
            e.preventDefault();
            return false;
        }
    }
});

// 우클릭 방지
document.addEventListener('contextmenu', function(e) {
    e.preventDefault();
    return false;
});

// 드래그 방지
document.addEventListener('dragstart', function(e) {
    e.preventDefault();
    return false;
});

